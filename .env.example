# Database Configuration
# Replace with your Render PostgreSQL connection string
DATABASE_URL=

# Node Environment
NODE_ENV=development

# JWT Configuration
# CRITICAL: Generate a strong secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Keep this secret secure and never commit it to version control!
JWT_SECRET=

# JWT token expiration (optional, defaults to 7d)
# Examples: '1h', '24h', '7d', '30d'
JWT_EXPIRES_IN=7d
